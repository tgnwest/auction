{
    "name": "xelasoft/auction",
    "type": "project",
    "license": "BSD-3-Clause",
    "version": "1.0.0",
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.4.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.13",
        "symfony/console": "^5.4.36"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html var/coverage",
        "app": "php bin/app.php --ansi"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.9",
        "vimeo/psalm": "^5.23"
    }
}
